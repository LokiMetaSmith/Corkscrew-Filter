FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

mergeTolerance 1e-6;

castellatedMesh true;
snap            true;
addLayers       true;

geometry
{
    corkscrew_fluid.stl
    {
        type triSurfaceMesh;
        name corkscrew;
    }
};

castellatedMeshControls
{
    allowFreeStandingZoneFaces true;
    maxLocalCells 1000000;
    maxGlobalCells 2000000;
    minRefinementCells 10;
    nCellsBetweenLevels 3;

    features
    (
        {
            file "corkscrew_fluid.eMesh";
            level 2;
        }
    );

    refinementSurfaces
    {
        corkscrew
        {
            level (2 2);
        }
    }

    refinementRegions
    {}

    resolveFeatureAngle 30;

    locationInMesh (12.000 0 0); // A point inside the fluid volume (annulus)
}

addLayersControls
{
    relativeSizes true;
    layers
    {
        "corkscrew.*"
        {
            nSurfaceLayers 3;
        }
    }
    expansionRatio 1.2;
    finalLayerThickness 0.3;
    minThickness 0.1;
    nGrow 0;
    featureAngle 130;
    maxFaceThicknessRatio 0.5;
    maxThicknessToMedialRatio 0.3;
    minMedianAxisAngle 90;
}

snapControls
{
    nSmoothPatch 3;
    tolerance 2.0;
    nSolveIter 30;
    nRelaxIter 5;
}

meshQualityControls
{
    nSmoothScale 4;
    errorReduction 0.75;
    maxNonOrtho 65;
    maxBoundarySkewness 20;
    maxInternalSkewness 4;
    maxConcave 80;
    minFlatness 0.5;
    minVol 1e-13;
    minTetQuality 1e-30;
    minArea -1;
    minTwist 0.02;
    minDeterminant 0.001;
    minFaceWeight 0.05;
    minVolRatio 0.01;
    minTriangleTwist -1;
}

